<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/data/ucenter/log/trivia-web/trivia-web.log</file>
		<!-- Support multiple-JVM writing to the same log file -->
		<prudent>true</prudent>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/data/ucenter/log/trivia-web/trivia-web.%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<!-- <timeBasedFileNamingAndTriggeringPolicy
                class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>50MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy> -->
			<maxHistory>90</maxHistory>
		</rollingPolicy>
		
		<Encoding>UTF-8</Encoding>
		<encoder>
			<pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %level [%file:%line] %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="OLAP_FILE"
			  class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/data/ucenter/log/trivia-web/trivia-olap.log</file>
		<!-- Support multiple-JVM writing to the same log file -->
		<prudent>true</prudent>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/data/ucenter/log/trivia-web/trivia-olap.%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<!-- <timeBasedFileNamingAndTriggeringPolicy
                class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>50MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy> -->
			<maxHistory>90</maxHistory>
		</rollingPolicy>

		<Encoding>UTF-8</Encoding>
		<encoder>
			<pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %level [%file:%line] %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<Encoding>UTF-8</Encoding>
		<encoder>
			<pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %level [%file:%line] %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="com.ecnu.trivia" level="INFO" />
	<logger name="com.ecnu.trivia.olap" level="DEBUG" additivity="false">

		<appender-ref ref="OLAP_FILE" />
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="net.sf.json" level="ERROR"/>
	<logger name="org.springframework" level="ERROR"/>
	<logger name="com.alibaba.druid" level="ERROR" />
	<logger name="org.apache.ibatis.session" level="ERROR"/>
	<logger name="org.quartz" level="ERROR"/>
	<logger name="org.mybatis" level="ERROR"/>
	<logger name="org.apache" addtivity="false"/>
	
	<root level="DEBUG">
		<appender-ref ref="FILE" />
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
