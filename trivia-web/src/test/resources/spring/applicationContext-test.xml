<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
        >

    <context:property-placeholder location="classpath*:conf/business.properties,
                classpath*:conf/cache-test.properties,
                classpath*:conf/db-test.properties,
                classpath*:conf/job.properties,
                classpath*:conf/business.properties
        " ignore-unresolvable="true"/>

    <!-- 注册web任务执行器 -->
    <bean class="com.ecnu.trivia.web.common.service.WebAsyncTaskExecutor" init-method="init" destroy-method="close">
        <property name="maxThread" value="${business.asyncTask.maxThread:10}"/>
    </bean>

    <import resource="classpath:spring/applicationContext-common.xml"/>
    <import resource="classpath:spring/applicationContext-tx.xml"/>
    <import resource="classpath:spring/applicationContext-cache.xml"/>
    <import resource="classpath:spring/applicationContext-web.xml"/>
</beans>
